extends /layouts/application.pug

block content
  .card.bg-light.shadow-sm.d-flex.mt-3
    .card-header
      h3.text-center New Task
    .card-body
      +formFor({ url: urlFor('tasks'), method: 'post' })
        +input('name', 'Name', { autofocus: true, required: true })
        +select('statusId', 'Status', {
          defaultOpt: defaultStatus,
          values: statuses,
        })
        +select('assigneeId', 'Assign To', {
          values: users,
          required: true,
        })
        +input('description', 'Description', { textarea: true, rows: 5 })
        button.btn.btn-outline-success.btn-lg.col-6.m-2(type='submit') Save
        a.btn.btn-outline-danger.btn-lg.col-5.m-2(href=urlFor('root')) Cancel
