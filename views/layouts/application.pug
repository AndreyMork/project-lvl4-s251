include /mixins/forms.pug
include /mixins/flash.pug

doctype html
html(lang='en')
  head
    title= pageTitle
    script(src='/assets/main.js') 
  body
    - const color = '9d76ba';
    nav.navbar.navbar-expand-md.navbar-dark.sticky-top(style=`background-color: #${color}`)
      a.navbar-brand(href=urlFor('root')) Task Manager
      button.navbar-toggler(data-toggle="collapse" data-target="#navbarCollapse")
        span.navbar-toggler-icon
      .collapse.navbar-collapse(id='navbarCollapse')
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href=urlFor('users')) Users
          li.nav-item
            a.nav-link(href=urlFor('about')) About
          li.nav-item
            a.nav-link(href=urlFor('tasks')) Tasks
        ul.navbar-nav
          if isSignedIn()
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(
                data-toggle="dropdown"
                href="#createDropdown"
                role="button"
                aria-haspopup="true"
                aria-expanded="false"
              ) Create
              .dropdown-menu
                a.dropdown-item(href=urlFor('createTask')) New Task 
            li.nav-item
              a.nav-link(href=urlFor('user', userId)) My Page
            li.nav-item
              a.nav-link(href=urlFor('session') data-method='delete' rel='nofollow') Sign Out
          else
            li.nav-item
              a.nav-link(href=urlFor('newSession')) Sign In
            li.nav-item
              a.nav-link(href=urlFor('newUser')) Sign Up
    main.container.mt-4
      +flashMessage()
      block content
