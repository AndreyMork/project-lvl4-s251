extends /layouts/application.pug

block content
  .card.bg-light.shadow-sm.d-flex.mt-3
    .card-header
      h1= user.fullName
    .card-body
      form(action=urlFor('changePassword') method='post' rel='nofollow')
        input(name='_method' type='hidden' value='put')
        table.table.table-borderless.table-sm
          tbody
            tr
              th(scope='row' style='width: 10%') Password:
              td
                input.form-control(type='password' name='oldPassword')
            tr
              th(scope='row') New password:
              td
                input.form-control(type='password' name='newPassword')
        button.btn.btn-success.btn-lg.m-2(type='submit') Save
        a.btn.btn-outline-danger.btn-lg.m-2(href=urlFor('userPage')) Cancel
