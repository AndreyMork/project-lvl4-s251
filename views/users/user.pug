extends /layouts/userCard.pug

block cardContent
  table.table.table-borderless.table-sm
    tbody
      tr
        th(scope='row' style='width: 10%') Email:
        td= user.email
      tr
        th(scope='row') First Name:
        td= user.firstName
      tr
        th(scope='row') Last Name:
        td= user.lastName
      tr
        th(scope='row') Id:
        td= user.id
  if (isLoggedUser)
    a.btn.btn-info.btn-lg.m-2(href=urlFor('userSettings')) Edit
    a.btn.btn-info.btn-lg.m-2(href=urlFor('changePassword')) Change password   
    a.btn.btn-outline-danger.btn-lg.m-2(href=urlFor('userDelete')) Delete Account
