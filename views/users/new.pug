extends /layouts/application.pug

block content
  form.form(action=urlFor('users') method='post')
    .form-label-group
      input.form-control(name='email' type='text' placeholder='Email address' id='inputEmail' required autofocus)
      label(for='inputEmail') Email address
    .form-label-group
      input.form-control(name='password' type='password' placeholder='Password' id='inputPassword' required)
      label(for='inputPassword') Password 
    .form-label-group
      input.form-control(name='firstName' type='text' placeholder='First name' id='inputFirstName')
      label(for='inputFirstName') First name (optional)
    .form-label-group
      input.form-control(name='lastName' type='text' placeholder='Last name' id='inputLastName')
      label(for='inputLastName') Last name (optional)
    button.btn.btn-outline-success.btn-success.btn-lg.btn-block(type='submit') Sign up

