extends /layouts/application.pug

block content
  .card.bg-light.shadow-sm.d-flex.mt-3
    .card-header
      h1= user.fullName
    .card-body
      form(action=urlFor('userSettings') method='post' rel='nofollow')
        input(name='_method' type='hidden' value='put')
        table.table.table-borderless.table-sm
          tbody
            tr
              th(scope='row' style='width: 10%') Email:
              td
                input.form-control(value=user.email name='email')
            tr
              th(scope='row') First Name:
              td
                input.form-control(value=user.firstName name='firstName')
            tr
              th(scope='row') Last Name:
              td
                input.form-control(value=user.lastName name='lastName')
            tr
              th(scope='row') Id:
              td= user.id            
        if (isLoggedUser)
          button.btn.btn-success.btn-lg.m-2(type='submit') Save
          a.btn.btn-outline-danger.btn-lg.m-2(href=urlFor('userPage')) Cancel
